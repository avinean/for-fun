{
  "include": ["src/**/*"],
	"compilerOptions": {
		"target": "es6",
		"composite": true,
		"module": "commonjs",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strictPropertyInitialization": false,
		"esModuleInterop": true
  },
  "lib": ["es2015"],
  "paths": {
      "@/*": ["*"]
  },
	"exclude": [
		"dist",
		"node_modules"
	]
}